            android:theme="@style/fragmentApplicationItemTitleText"
            app:layout_constraintEnd_toEndOf="@+id/f_application_item_title_second"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
