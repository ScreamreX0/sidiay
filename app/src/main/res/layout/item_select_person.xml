<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <CheckBox
        android:id="@+id/item_select_person_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/item_select_person_title"
        style="@style/Widget.Sidiay.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_select_person_checkbox"
        app:layout_constraintStart_toEndOf="@+id/item_select_person_checkbox"
        app:layout_constraintTop_toTopOf="@+id/item_select_person_checkbox" />

    <TextView
        android:id="@+id/item_select_person_subtitle"
        style="@style/Widget.Sidiay.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/item_select_person_title"
        app:layout_constraintTop_toBottomOf="@+id/item_select_person_title" />

</androidx.constraintlayout.widget.ConstraintLayout>