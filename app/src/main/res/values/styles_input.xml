<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sidiay.TextInputLayer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">32</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">false</item>

        <item name="hintTextColor">@color/grey_800</item>
        <item name="backgroundTint">@color/grey_800</item>
        <item name="boxStrokeColor">@color/grey_800</item>
        <item name="boxBackgroundColor">@color/grey_800</item>
    </style>

    <style name="Widget.Sidiay.EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textCursorDrawable">@color/grey_800</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Widget.Sidiay.AddApplication.TextInputLayer" parent="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Widget.Sidiay.AddApplication.EditText" parent="ThemeOverlay.Material3.TextInputEditText">

    </style>
</resources>