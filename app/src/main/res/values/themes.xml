<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sidiay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="defaultButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="defaultInputTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="applicationItemTextView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="applicationItemIcon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="tint">@color/grey</item>
    </style>

    <style name="Base.Widget.AppCompat.SearchView." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>
    
    <style name="fragmentApplicationItemTitleText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="fragmentApplicationItemDescText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragmentApplicationItemIcon">
        <item name="tint">@color/grey</item>
    </style>

    <style name="fragmentApplicationItemIconSecond">
        <item name="tint">@color/orange</item>
    </style>
</resources>