<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Sidiay.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.Sidiay.Text.Title">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Widget.Sidiay.Text.SecondTitle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Sidiay.Subtitle" parent="Widget.Sidiay.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="Widget.Sidiay.Text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Sidiay.Text.Description" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Sidiay.Text.StarText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">"@color/red_500"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">*</item>
    </style>

    <style name="Widget.Sidiay.Text.ItemApplication">
        <item name="android:textColor">@color/black</item>
    </style>




</resources>