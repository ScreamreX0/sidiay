<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Themes -->
    <style name="Theme.Sidiay.DefaultTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.Background" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_10</item>
    </style>

    <!-- Chips -->
    <style name="Widget.Sidiay.ItemApplication.ChipGroup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.Chip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_200</item>
    </style>

    <style name="Widget.Sidiay.AddApplication.Chip.Object" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_200</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="Widget.Sidiay.AddApplication.Chip.AddObject" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/blue_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Bottom nav -->
    <style name="Widget.Sidiay.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/orange_500</item>
        <item name="itemTextColor">@color/orange_500</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- Views -->
    <style name="Widget.Sidiay.ItemApplication.RecyclerView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.ChipGroup.ScrollView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Sidiay.SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <!-- Appbars -->
    <style name="Widget.Sidiay.ItemApplication.AppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/orange_500</item>
    </style>
</resources>