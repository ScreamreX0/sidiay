<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loadFragment">

    <fragment
        android:id="@+id/loadFragment"
        android:name="com.example.sidiay.presentation.fragments.start.LoadFragment"
        android:label="fragment_load"
        tools:layout="@layout/fragment_load">
        <action
            android:id="@+id/action_loadFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@navigation/nav_start"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sidiay.presentation.fragments.start.SignInFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_loginFragment_to_nav_menu"
            app:destination="@id/mainMenuFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.sidiay.presentation.fragments.menu.MainMenuFragment"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu">
        <argument
            android:name="user"
            app:argType="com.example.domain.models.entities.User" />
        <action
            android:id="@+id/action_mainMenuFragment_to_nav_graph_home"
            app:destination="@id/nav_graph_home">
            <argument
                android:name="user"
                app:argType="com.example.domain.models.entities.User" />
        </action>
    </fragment>
    <include app:graph="@navigation/nav_graph_home" />
</navigation>