<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sidiay.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Sidiay.Subtitle" parent="Widget.Sidiay.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="Widget.Sidiay.Text" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Widget.Sidiay.Text.Description" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Sidiay.Text.ItemTicket.Description" parent="Widget.Sidiay.Text.Description">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="Widget.Sidiay.Text.StarText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">*</item>
    </style>

    <style name="Widget.Sidiay.Text.ItemTicket">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Widget.Sidiay.Text.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.Sidiay.Text.SecondTitle">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>
</resources>