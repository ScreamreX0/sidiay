<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Sidiay.DefaultTheme">
        <item name="android:background">@color/grey_700</item>
        <item name="colorPrimary">@color/grey_700</item>
    </style>

    <style name="Widget.Sidiay.SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Widget.Sidiay.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/grey_600</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.Background" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_600</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.RecyclerView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/grey_700</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.ChipGroup.ScrollView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/grey_700</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.Chip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_950</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.AppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_600</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.FloatingButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_200</item>
        <item name="tint">@color/black</item>
    </style>
</resources>