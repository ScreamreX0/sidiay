<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom nav -->
    <style name="Widget.Sidiay.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <!-- Appbars -->
    <style name="Widget.Sidiay.AppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <!-- Themes -->
    <style name="Theme.Sidiay.DefaultTheme">
        <item name="android:background">@color/grey_700</item>
        <item name="colorPrimary">@color/grey_700</item>
    </style>

    <style name="Theme.Sidiay.ItemBackground">
        <item name="android:backgroundTint">#3E4249</item>
    </style>

    <style name="Widget.Sidiay.Background" parent="">
        <item name="android:backgroundTint">@color/colorSecondaryLight</item>
    </style>

    <!-- Chips -->
    <style name="Widget.Sidiay.ItemApplication.ChipGroup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_600</item>
    </style>

    <style name="Widget.Sidiay.ItemApplication.Chip" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_50</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="Widget.Sidiay.Chip.Object" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="Widget.Sidiay.Chip.AddObject" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/grey_600</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Views -->
    <style name="Widget.Sidiay.RecyclerView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="Widget.Sidiay.ChipGroup.ScrollView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="Widget.Sidiay.SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>